# ==============================================
# 한국모래상자치료학회 환경 변수 예시 파일
# ==============================================
# 이 파일을 복사하여 .env.local로 만들고 실제 값을 입력하세요.
# 명령어: cp .env.example .env.local


# ==============================================
# Supabase Configuration
# ==============================================
# Supabase 프로젝트 대시보드 > API 섹션에서 확인 가능
# URL: https://app.supabase.com/project/[프로젝트ID]/settings/api

# 클라이언트에서 사용 가능한 공개 키 (필수)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# 서버 전용 키 - 클라이언트에 절대 노출 금지! (선택)
# 관리자 권한이 필요한 서버 측 작업에만 사용
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# JWT 시크릿 (선택)
# Supabase 프로젝트 설정 > API > JWT Settings에서 확인
SUPABASE_JWT_SECRET=your-jwt-secret-here


# ==============================================
# Cloudflare R2 Configuration (S3 호환)
# ==============================================
# Cloudflare 대시보드 > R2 > Bucket > Settings에서 확인
# 정적 파일 백업 및 스토리지 용도

# R2 엔드포인트 (필수)
# 예: https://[account-id].r2.cloudflarestorage.com
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# R2 액세스 키 (필수)
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key

# 버킷 이름 (필수)
R2_BUCKET_NAME=your-bucket-name

# 퍼블릭 URL/도메인 (선택)
# 이미지 등 공개 파일 접근용 커스텀 도메인
# 예: https://cdn.sandtray.or.kr 또는 https://pub-[id].r2.dev
R2_PUBLIC_BASE_URL=https://your-custom-domain.com


# ==============================================
# Cal.com Configuration (예약/스케줄링)
# ==============================================
# Cal.com 임베드를 위한 설정 (선택)
# 상담 예약 기능에 사용

# Cal.com API 키 (선택)
# https://app.cal.com/settings/developer/api-keys 에서 발급
NEXT_PUBLIC_CAL_COM_API_KEY=your-cal-com-api-key


# ==============================================
# Next.js Configuration
# ==============================================
# Next.js 애플리케이션 설정

# 애플리케이션 URL (프로덕션)
NEXT_PUBLIC_APP_URL=https://sandtray25.vercel.app

# Node 환경 (자동 설정됨, 보통 수동 설정 불필요)
# NODE_ENV=development


# ==============================================
# Vercel Analytics & Speed Insights
# ==============================================
# Vercel 프로젝트에 자동 적용됨
# 로컬에서 테스트하려면 아래 설정 필요 (선택)

# NEXT_PUBLIC_VERCEL_ENV=development


# ==============================================
# 기타 설정 (필요 시 추가)
# ==============================================

# 이메일 발송 서비스 (예: SendGrid, Resend 등)
# EMAIL_FROM=noreply@sandtray.or.kr
# EMAIL_API_KEY=your-email-service-api-key

# Google Analytics (선택)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry (에러 모니터링, 선택)
# NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn


# ==============================================
# 보안 체크리스트
# ==============================================
# ✅ .env.local 파일은 .gitignore에 포함되어 있습니다
# ✅ NEXT_PUBLIC_* 접두사는 클라이언트에 노출됩니다
# ✅ 서버 전용 키(SERVICE_ROLE_KEY 등)는 절대 클라이언트 코드에서 사용하지 마세요
# ✅ 프로덕션 환경 변수는 Vercel 프로젝트 설정에서 관리하세요
# ✅ RLS(Row Level Security)를 활성화하여 데이터베이스를 보호하세요
